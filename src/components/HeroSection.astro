---
// Du kan tilføje props, hvis du vil sende titlerne dynamisk til komponenten.
const { title, subtitle } = Astro.props;
---

<section class="herosection">
    <h1>{title}</h1>
    <h2>{subtitle}</h2>
    
    <div class="image-container">
      <div class="herosection_image"></div>
      <div class="herosection_illustration"></div>
    </div>
  </section>
  
  <style>
    .herosection {
      position: relative;
      width: 100%;
      height: 100dvh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  
    h1, h2 {
      position: absolute;
      z-index: 10;
      color: white;
      margin: 0;
      margin-top: 50px;
    }
  
    h1 {
      font-size: 200px;
      font-family: "Bebas Neue";
      top: 50px;
      left: 50px;
    }
  
    h2 {
      font-size: 40px;
      font-family: "Bebas Neue";
      top: 280px;
      left: 50px;
    }
  
    .image-container {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      margin-top: 800px;
    }
  
    .herosection_image {
      background-image: url("/img/header_img.webp");
      background-size: cover;
      background-repeat: no-repeat;
      width: 70%; /* Karrusel billedets bredde */
      height: 80%;
    }
  
    .herosection_illustration {
      background-image: url("/img/karrusel_illustration.png");
      background-size: contain;
      background-repeat: no-repeat;
      width: 60%; /* Illustrations billedets bredde */
      height: 100%;
      position: absolute;
      right: -300px;
      top: -170px;
      z-index: 5; /* Sørg for overlap med carousel billedet */
      transform: translateX(-20%); /* Overlapper billedet lidt */
    }
  </style>
  
  

